{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "read": "allow",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "webfetch": "allow",
    "bash": {
      "*": "ask",
      "ls": "allow",
      "ls *": "allow",
      "git status": "allow",
      "git status *": "allow",
      "git diff": "allow",
      "git diff --staged": "allow",
      "git diff --cached": "allow",
      "git diff --stat": "allow",
      "git diff --name-only": "allow",
      "git diff --name-status": "allow",
      "git diff --word-diff": "allow",
      "git diff --color": "allow",
      "git diff --no-color": "allow",
      "git diff -- *": "allow",
      "git diff --staged -- *": "allow",
      "git diff --cached -- *": "allow",
      "git log": "allow",
      "git log --oneline": "allow",
      "git log --oneline --graph": "allow",
      "git log --oneline --graph --decorate": "allow",
      "git log --graph": "allow",
      "git log --decorate": "allow",
      "git log --stat": "allow",
      "git log --name-only": "allow",
      "git log --name-status": "allow",
      "git log -n *": "allow",
      "git log --max-count *": "allow",
      "git log --since *": "allow",
      "git log --until *": "allow",
      "git show": "allow",
      "git show --stat": "allow",
      "git show --name-only": "allow",
      "git show --name-status": "allow",
      "git show --oneline": "allow",
      "git show --stat *": "allow",
      "git show --name-only *": "allow",
      "git show --name-status *": "allow",
      "git show --oneline *": "allow",
      "git branch": "allow",
      "git branch -a": "allow",
      "git branch -v": "allow",
      "git branch -vv": "allow",
      "git ls-files": "allow",
      "git ls-files --stage": "allow",
      "git ls-files --deleted": "allow",
      "git ls-files --modified": "allow",
      "git ls-files --others": "allow",
      "git ls-files --cached": "allow",
      "git ls-files --exclude-standard": "allow",
      "git ls-tree *": "allow",
      "git blame *": "allow",
      "git blame -w *": "allow",
      "git blame -L *": "allow",
      "git rev-parse --show-toplevel": "allow",
      "git rev-parse --show-prefix": "allow",
      "git rev-parse --verify *": "allow",
      "git describe": "allow",
      "git describe --tags": "allow",
      "git describe --always": "allow",
      "git describe --dirty": "allow",
      "git shortlog": "allow",
      "git shortlog -s": "allow",
      "git shortlog -n": "allow",
      "git remote -v": "allow",
      "git config --get *": "allow",
      "git config --list": "allow",
      "git config -l": "allow",
      "git stash list": "allow",
      "git worktree list": "allow",
      "git -c *": "deny",
      "git --config-env *": "deny",
      "git --pager*": "deny",
      "git * --pager*": "deny",
      "git --paginate*": "deny",
      "git * --paginate*": "deny",
      "git * --ext-diff*": "deny",
      "git * --textconv*": "deny",
      "git diff --output*": "deny"
    },
    "edit": "allow"
  },
  "plugin": ["opencode-gemini-auth@latest"]
}
